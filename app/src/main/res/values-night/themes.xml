<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsMead" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Notification bar -->
        <item name="colorPrimaryDark">@color/black_200</item> <!-- NOTE: Refer to primaryBackgroundColor -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Application colors -->
        <item name="primaryTextColor">@color/white</item>
        <item name="secondaryTextColor">@color/gray_250</item>

        <item name="primaryBackgroundColor">@color/black_200</item>
        <item name="transparentColor">@color/transparent</item>

        <item name="primaryIconColor">@color/gray_250</item>
        <item name="secondaryIconColor">@color/gray_200</item>

        <item name="primaryButtonTextColor">@color/white</item>
        <item name="primaryButtonBgColor">@color/gray_100</item>
        <item name="primaryButtonRippleColor">@color/gray_100</item>

        <item name="secondaryButtonTextColor">@color/white</item>
        <item name="secondaryButtonBgColor">@color/black_100</item>
        <item name="secondaryButtonIconColor">@color/white</item>

        <item name="dividerColor">@color/gray_100</item>
        <item name="shimmerColor">@color/gray_100</item>
        <item name="cardBackgroundColor">@color/black_100</item>
        <item name="cardBackgroundColorPrimary">@color/gold_20</item>

        <!--component colors-->
        <item name="lowEmphasisColor">@color/black_100</item>
        <item name="midEmphasisColor">@color/true_black</item>
        <item name="highEmphasisColor">@color/cobalt_100</item>

        <item name="lowBackground">@color/gray_300</item>
        <item name="midBackground">@color/black_200</item>
        <item name="highBackground">@color/white</item>

        <item name="lowTextEmphasis">@color/gray_250</item>
        <item name="highTextEmphasis">@color/cobalt_50</item>

        <item name="iconColorDefault">@color/gray_150</item>
        <item name="iconColorStar">@color/gold_200</item>

        <item name="buttonRippleGold">@color/gold_100</item>
        <item name="buttonRippleCobalt">@color/cobalt_100</item>
        <item name="buttonRippleGray">@color/gray_200</item>

        <item name="navBarColor">@color/black</item>
        <item name="navBarIconColor">@color/white</item>
        <item name="navBarTextColor">@color/white</item>
        <item name="navBarIndicatorColor">@color/gold_300</item>

        <item name="listReadLaterBackground">@color/gold_300</item>
        <item name="listOfflineBackground">@color/gray_100</item>
        <item name="listReadLaterStroke">@color/gold_200</item>
        <item name="listOfflineStroke">@color/gray_150</item>
        <item name="listDefaultStroke">@color/gray_100</item>
        <item name="listNumTextColor">@color/white</item>

        <item name="tabIndicatorColor">@color/cobalt_50</item>
        <item name="tabSelectedTextColor">@color/cobalt_50</item>
        <item name="tabTextColor">@color/gray_250</item>

        <item name="titleColor">@color/gold_100</item>

    </style>

    <!--    Button themes   -->

    <style name="ButtonSmall_LowEmphasis" parent="ts_button_medium">
        <item name="android:backgroundTint">?lowEmphasisColor</item>
        <item name="android:textColor">?secondaryButtonTextColor</item>
        <item name="rippleColor">?buttonRippleGold</item>
        <!--Padding-->
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonSmall_HighEmphasis" parent="ts_button_large">
        <item name="android:backgroundTint">?highEmphasisColor</item>
        <item name="android:textColor">?primaryButtonTextColor</item>
        <item name="rippleColor">?buttonRippleGold</item>
        <!--Padding-->
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonSquare_MidEmphasis" parent="ts_subtext_regular">
        <item name="android:backgroundTint">?midEmphasisColor</item>
        <item name="android:textColor">?secondaryButtonTextColor</item>
        <item name="rippleColor">?buttonRippleGold</item>
        <!--Padding-->
        <item name="android:padding">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ButtonSquare_MidEmphasis.Smaller" parent="ButtonSquare_MidEmphasis">
        <item name="android:backgroundTint">?lowEmphasisColor</item>
    </style>

    <style name="ButtonSquare_MidEmphasis.BGMode" parent="ButtonSquare_MidEmphasis">
        <item name="android:backgroundTint">?transparentColor</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:width">55dip</item>
        <item name="android:textColor">?secondaryTextColor</item>
    </style>

    <style name="ButtonMedium_Solid" parent="ts_button_large">
        <item name="android:backgroundTint">?highEmphasisColor</item>
        <item name="android:textColor">?primaryButtonTextColor</item>
        <item name="rippleColor">?buttonRippleGold</item>
        <!--Padding-->
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="ButtonMedium_Text" parent="ButtonMedium_Solid">
        <item name="android:backgroundTint">?midBackground</item>
        <item name="android:textColor">?highTextEmphasis</item>
        <item name="rippleColor">?buttonRippleGray</item>
    </style>

    <!--    List card style  -->
    <style name="ListCardStyle.Default" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?primaryBackgroundColor</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="rippleColor">?buttonRippleGold</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?listDefaultStroke</item>
    </style>

    <style name="ListCardStyle.ReadLater" parent="ListCardStyle.Default">
        <item name="cardBackgroundColor">?listReadLaterBackground</item>
        <item name="strokeColor">?listReadLaterStroke</item>
    </style>

    <style name="ListCardStyle.Offline" parent="ListCardStyle.Default">
        <item name="cardBackgroundColor">?listOfflineBackground</item>
        <item name="strokeColor">?listOfflineStroke</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?navBarIndicatorColor</item>
    </style>


</resources>