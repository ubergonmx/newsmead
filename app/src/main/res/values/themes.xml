<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsMead" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Notification bar -->
        <item name="colorPrimaryDark">@color/white</item> <!-- NOTE: Refer to primaryBackgroundColor -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Application colors -->
        <item name="primaryTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/gray_100</item>

        <item name="primaryBackgroundColor">@color/white</item>

        <item name="primaryIconColor">@color/black</item>
        <item name="secondaryIconColor">@color/gray_100</item>

        <item name="primaryButtonTextColor">@color/white</item>
        <item name="primaryButtonBgColor">@color/gray_100</item>
        <item name="primaryButtonRippleColor">@color/gray_200</item>

        <item name="secondaryButtonTextColor">@color/black</item>
        <item name="secondaryButtonBgColor">@color/gray_300</item>
        <item name="secondaryButtonIconColor">@color/black</item>

        <item name="dividerColor">@color/divider_color</item>
        <item name="shimmerColor">@color/gray_200</item>
        <item name="cardBackgroundColor">@color/gray_300</item>

        <!--component colors-->
        <item name="lowEmphasisColor">@color/gold_20</item>
        <item name="midEmphasisColor">@color/gold_60</item>
        <item name="highEmphasisColor">@color/cobalt_100</item>

        <item name="lowBackground">@color/gray_300</item>
        <item name="midBackground">@color/white</item>
        <item name="highBackground">@color/black</item>

        <item name="lowTextEmphasis">@color/gray_100</item>

    </style>

    <style name="Theme.NewsMead" parent="Base.Theme.NewsMead" />

    <style name="Theme.NewsMead.Circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/sample_newsmead_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.NewsMead</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonOverlay">
        <item name="fontFamily">@font/arial_regular</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonOverlayGray" parent="ButtonOverlay">
        <item name="colorPrimary">?primaryButtonBgColor</item>
        <item name="colorOnPrimary">?primaryButtonTextColor</item>
        <item name="rippleColor">?primaryButtonRippleColor</item>
    </style>

    <style name="ButtonOverlayWhite" parent="ButtonOverlay">
        <item name="colorPrimary">?secondaryButtonBgColor</item>
        <item name="colorOnPrimary">?secondaryButtonTextColor</item>
        <item name="rippleColor">?secondaryButtonBgColor</item>
    </style>

    <!--    Button themes   -->

    <style name="ButtonSmall_LowEmphasis" parent="ts_button_medium">
        <item name="android:backgroundTint">?lowEmphasisColor</item>
        <item name="android:textColor">?secondaryButtonTextColor</item>
        <item name="rippleColor">@color/gold_100</item>
        <!--Padding-->
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonMedium_Solid" parent="ts_button_large">
        <item name="android:backgroundTint">?highEmphasisColor</item>
        <item name="android:textColor">?primaryButtonTextColor</item>
        <item name="rippleColor">@color/cobalt_50</item>
        <!--Padding-->
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="ButtonMedium_Text" parent="ButtonMedium_Solid">
        <item name="android:backgroundTint">?midBackground</item>
        <item name="android:textColor">?highEmphasisColor</item>
        <item name="rippleColor">@color/gray_200</item>
    </style>



    <!-- Text Field Style -->
    <style name="EditTextOverlay">
        <item name="fontFamily">@font/arial_regular</item>
        <item name="boxBackgroundColor">?primaryBackgroundColor</item>
    </style>

    <!-- Material Override-->
    <style name="Widget.App.ButtonStyle.Cobalt" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/ButtonMedium_Solid</item>
    </style>

    <style name="Widget.App.ButtonStyle.Gray" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/ButtonOverlayGray</item>
    </style>

    <style name="Widget.App.ButtonStyle.White" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/ButtonOverlayWhite</item>
    </style>

    <style name="Widget.App.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/arial_regular</item>
        <item name="boxBackgroundColor">?primaryBackgroundColor</item>
    </style>
</resources>