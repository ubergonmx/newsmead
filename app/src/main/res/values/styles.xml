<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography Text Styles -->
    <!--Display-->
    <style name="ts_display_large">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="ts_display_medium">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="ts_display_small">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <!--Title-->
    <style name="ts_title_large">
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="ts_title_small">
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <!--Body-->
    <style name="ts_body_large">
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.6</item>
    </style>

    <style name="ts_body_small">
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.6</item>
    </style>

    <!--Buttons-->
    <style name="ts_button_large">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="ts_button_medium">
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="ts_button_small">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <!--Subtext-->
    <style name="ts_subtext_regular">
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.14</item>
    </style>

    <style name="ts_subtext_bold">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1.14</item>
    </style>


</resources>