<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:background="?primaryBackgroundColor">

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/arial_regular"
        android:text="@string/home_title"
        android:textColor="?primaryTextColor"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="?secondaryButtonBgColor"
        android:drawableStart="@drawable/ic_baseline_history_24"
        android:fontFamily="@font/arial_regular"
        android:paddingStart="6dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/home_history_btn"
        android:textColor="?secondaryButtonTextColor"
        android:textSize="16sp"
        app:icon="@drawable/ic_baseline_history_24"
        app:iconPadding="8dp"
        app:iconTint="?secondaryButtonIconColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?primaryButtonRippleColor" />
</androidx.constraintlayout.widget.ConstraintLayout>